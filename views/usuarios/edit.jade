extends ../layout

block content
	h1 Alteração de Usuários
	hr
	
	form(method="POST",action="/usuarios/edit/#{value._id}", role="form")
		input(type="hidden" name="_method" value="put")
		div(class="form-group")
		label Nome:
		input(type="text", name="nome", placeholder="Digite o seu nome", required, pattern="[A-Za-z ]+", title="O nome deve conter apenas letras[A-Z,a-z]", class="form-control", value="#{value.nome}")
		div(class="form-group")
		label Login:
		input(type="text", name="login", placeholder="Digite o seu login", required, pattern="[a-z0-9]+", title="O login deve conter apenas letras minúsculas e sem espaços[a-z]", class="form-control", value="#{value.login}")
		br
		br
		a(href="/veiculos/edit/#{value._id}" title="Voltar", class= "btn btn-success") Cadastrar/Alterar Veículo
		br
		br
		input(type="submit", value="Atualizar", class= "btn btn-success")
		&nbsp&nbsp
		a(href="/usuarios" title="Voltar", class= "btn btn-warning") Voltar