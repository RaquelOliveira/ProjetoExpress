extends ../layout

block content
	h1 Cadastro de Usuários
	hr
	
	form(method="POST",action="/usuarios", role="form")
		div(class="form-group")
		label Nome:
		input(type="text", name="nome", placeholder="Digite o seu nome", required, pattern="[A-Za-z ]+", title="O nome deve conter apenas letras[A-Z,a-z]", class="form-control")
		div(class="form-group")
		label Login:
		input(type="text", name="login", placeholder="Digite o seu login", required, pattern="[a-z0-9]+", title="O login deve conter apenas letras minúsculas e sem espaços[a-z]", class="form-control")
		div(class="form-group")
		label Senha:
		input(type="password", name="senha", placeholder="Digite a sua senha", required, pattern="(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z]).{6,}", title="A senha deve conter no mínimo uma letra maiúscula, uma letra minúscula e um numeral. Ex: Fulano1" class="form-control")
		div(class="form-group")
		input(type="submit", value="Cadastrar", class= "btn btn-success")
		&nbsp&nbsp
		a(href="/usuarios" title="Voltar", class= "btn btn-warning") Voltar
		label "#{value}"