extends ../layout

block content
	h1 PÃ¡gina de carona
	hr
	br
	br
	if msgUpdate
		div(class="alert alert-info")
		p Registro atualizado com sucesso!
	br
	table(class="table")
		thead
			tr
				th Locais:
				th Origem:
				th Destino:
				th qtdVagas:
				th id_usuario:
		tbody
		each valor, i in lista
			tr
